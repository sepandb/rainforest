<%= form_for @product do |f| %>
	<p>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :description %>
		<%= f.text_area :description %>
	</p>
	<p>
		<%= f.label :price_in_cents %>
		<%= f.number_field :price_in_cents %>
	</p>
	<p>
		<%= f.submit "Save" %>
	</p>
<% end  %>
