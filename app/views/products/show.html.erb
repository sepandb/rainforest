<% if current_user  %>
	<h3>Reviews</h3>

	<p>Reviews for <%= @product.name %></p>

	<% @product.reviews.each do |review| %>
		<p>
		<%= review.comment %>
		<% if review.user != nil %>
			This review was written by <%= review.user %><br>
			on <%= review.created_at %>
		<% end %>
		</p>
	<% end  %>

	<h4>New Review</h4>

	<%= form_for([@product, @review]) do |f| %>
		<% if @review.errors.any?  %>
			<h2><%= pluralize(@review.errors.count, "error") prevented this from being saved %> </h2>
			<ul>
			<% @review.errors.full_messages.each do |error|  %>
				<li> <%= error %> </li>
				<% end  %>
			</ul>
		<% end %>

		 <div>
		 	<%= f.label :comment %><br />
		 	<%= f.text_area :comment %>
		 </div>
		 <div>
		 	<%= f.submit %>
		 </div>
	<% end %>

<% else  %>

	Please <%= link_to("login", new_session_path) to add a review %>



<% end %>